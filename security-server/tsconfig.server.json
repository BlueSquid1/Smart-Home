      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "ES2021",
      "module": "commonjs",
      "outDir": "./dist/",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": [
        "node"
